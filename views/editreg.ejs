<div class="container-custom">
    <div class="error"></div>
    <p>
        Kindly fill the form to register.
    </p>
    <form method="POST" action="/fill-registration" enctype="multipart/form-data"
        onsubmit="return confirm('Kindly verify the details before submitting , OK to proceed');">
        <div class="row">
            <div class="col-25">
                <label for="reg_uploadfile">Upload Photo</label>
                <label class="custom-upload" style="font-size:.9em;margin-left:5px; width: 50%;">Passport Size
                    (3.5cmx4.5cm - Max 512kb)</label>
            </div>
            <div class="col-75">
                <input type="file" id="reg_uploadfile" name="file" onchange="GetFileSize()" />
            </div>
            <p id="size"></p>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_name">Name of the Applicant</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_name" value="<%=userdata.app_name%>" name="reg_name" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_course">Course</label>
            </div>
            <div class="col-75">
                <select class="input-border" id="reg_course" name="reg_course" style="margin-bottom: 20px;"
                    required>
                    <option value="" disabled selected>Select your option</option>
                    <option value="Bsc Nursing">Bsc Nursing</option>
                    <option value="Diploma Nursing">Diploma Nursing</option>
                    <option value="B.Ed">B.Ed</option>
                </select>
            </div>
        </div>
        <div class="row" style="display: none;">
            <div class="col-25">
                <label for="reg_mobileno">Mobile Number</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_mobileno" value="<%=userdata.app_mobileno%>"
                    name="reg_mobileno" readonly />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_fathername">Father Name</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_fathername" value="<%=userdata.app_fathername%>"
                    name="reg_fathername" required />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_mothername">Mother Name</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_mothername" value="<%=userdata.app_mothername%>"
                    name="reg_mothername" required />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_fatheroccupation">Father Occupation</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_fatheroccupation"
                    value="<%=userdata.app_fatheroccupation%>" name="reg_fatheroccupation" required />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_motheroccupation">Mother Occupation</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_motheroccupation"
                    value="<%=userdata.app_motheroccupation%>" name="reg_motheroccupation" required />
            </div>
        </div>
        <div class=" row">
            <div class="col-25">
                <label for="reg_presentaddress">Address for Communication </label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_presentaddress" value="<%=userdata.app_presentadd%>"
                    name="reg_presentaddress" required />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_emailaddress">Email Address</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="email" id="reg_emailaddress" value="<%=userdata.app_emailaddress%>"
                    name="reg_emailaddress" required />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_birth">Date of Birth</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="date" id="reg_birth" value="<%=userdata.app_birth%>" name="reg_birth"
                    min="1985-03-01" max="2003-12-31" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_aadharno">Aadhar No</label>
            </div>
            <div class="col-75">
                <input class="input-border" type="text" id="reg_aadharno" value="<%= userdata.app_aadharno%>"
                    name="reg_aadharno" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_religion">Religion</label>
            </div>
            <div class="col-75">
                <select class="input-border" id="reg_religion" value="<%=userdata.app_religion%>" name="reg_religion"
                    style="margin-bottom: 20px;" required>
                    <option value="" disabled selected>Select your option</option>
                    <option value="HINDU">HINDU</option>
                    <option value="CHRISTIAN">CHRISTIAN</option>
                    <option value="MUSLIM">MUSLIM</option>
                    <option value="OTHER">OTHER</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_caste">Community</label>
            </div>
            <div class="col-75">
                <select class="input-border" id="reg_caste" value="<%=userdata.app_caste%>" name="reg_caste"
                    style="margin-bottom: 20px;" required>
                    <option value="" disabled selected>Select your option</option>
                    <option value="SC/ST">SC/ST</option>
                    <option value="BC">BC</option>
                    <option value="MBC">MBC</option>
                    <option value="FC">FC</option>
                    <option value="OC">OC</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_nationality">Nationality</label>
            </div>
            <div class="col-75">
                <select class="input-border" id="reg_nationality" value="<%=userdata.app_nationality%>"
                    name="reg_nationality" style="margin-bottom: 20px;" required>
                    <option value="" disabled selected>Select your option</option>
                    <option value="INDIAN">INDIAN</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="reg_maritalstatus">Marital Status </label>
            </div>
            <div class="col-75">
                <select class="input-border" id="reg_maritalstatus" value="<%=userdata.app_maritalstatus%>"
                    name="reg_maritalstatus" style="margin-bottom: 20px;" required>
                    <option value="" disabled selected>Select your option</option>
                    <option value="SINGLE">SINGLE</option>
                    <option value="MARRIED">MARRIED</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="academics">Academic Qualification</label>
            </div>
        </div>
