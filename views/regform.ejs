<script>
    function validate(form) {
        if (!valid) {
            alert('Please correct the errors in the form!');
            return false;
        }
        else {
            return confirm('Do you really want to submit the form? Have you entered all the fields');
        }
    }
</script>
<script>

    function GetFileSize() {
        var fi = document.getElementById('reg_uploadfile'); // GET THE FILE INPUT.

        // VALIDATE OR CHECK IF ANY FILE IS SELECTED.
        if (fi.files.length > 0) {
            // RUN A LOOP TO CHECK EACH SELECTED FILE.
            for (var i = 0; i <= fi.files.length - 1; i++) {

                var fsize = fi.files.item(i).size;      // THE SIZE OF THE FILE.
                document.getElementById('size').innerHTML = Math.round((fsize / 1024)) + '</b> KB'
                if (Math.round((fsize / 1024)) > 512) {
                    alert("Maximux image file size allowed 512 KB")
                    document.getElementById('reg_uploadfile').value = '';
                    document.getElementById('size').innerHTML = ''
                }
            }
        }
    }
</script>
